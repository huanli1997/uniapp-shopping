.indexContainer .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 20rpx;
}
.indexContainer .header .logo {
  width: 140rpx;
  height: 40rpx;
  margin: 0 20rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.indexContainer .header .search {
  position: relative;
  height: 60rpx;
  background: #ededed;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  padding-left: 60rpx;
}
.indexContainer .header .search .placeholder {
  text-align: center;
  font-size: 24rpx;
  text-indent: -60rpx;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  top: 25%;
  left: 20rpx;
}
.indexContainer .header .search input {
  height: 100%;
}
.indexContainer .header .btn {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  margin: 0 20rpx;
  width: 144ipx;
  height: 60rpx;
  line-height: 60rpx;
  color: #f00;
  font-size: 26rpx;
}
.indexContainer .navScroll {
  white-space: nowrap;
  height: 80rpx;
  font-size: 28rpx;
}
.indexContainer .navScroll .navItem {
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  margin: 0 10rpx;
  line-height: 80rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  text-align: center;
}
.indexContainer .navScroll .navItem.active {
  border-bottom: 2rpx solid #bb2c08;
}
.indexContainer .contentScroll {
/*	
			tabbar 和top栏 在H5端是div模拟的，属于前端屏幕窗口的一部分，
			如果要使用bottom居底定位方式，应该使用css变量--window-bottom，
			var(--window-bottom) 在h5端值为50px，在小程序端没有值
			比如悬浮在tabbar上方10px的按钮，样式如下bottom: calc(var(--window-bottom) + 10px)
			
		*/
  height: calc(100vh - 60rpx - 80rpx - 0px - 0px);
}

